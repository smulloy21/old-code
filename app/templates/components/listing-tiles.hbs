{{#each sortedListings as |listing|}}
{{#link-to 'listing' listing.id}}
  <div class="row listing">
    <img src={{listing.image}} class="col-xs-2 img-responsive">
    <div class="col-xs-8">
      <h3>{{listing.title}} <small>{{moment-from-now listing.date}}</small></h3>
    </div>
    <div class="col-xs-2 text-right">
      <h3><small>{{listing.location}}</small></h3>
    </div>
  </div>
{{/link-to}}
{{/each}}
